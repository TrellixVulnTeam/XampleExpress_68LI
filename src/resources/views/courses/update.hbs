<div  class="mt-4">
<form method="POST" action="/courses/{{course._id}}">
  <div class="form-group">
    <label for="Name">Tên máy ảnh :</label>
    <input type="text" class="form-control" value = "{{course.name}}"id="name" name="name" placeholder="name">
  </div>
  <div class="form-group">
    <label for="Name">Mô tả : </label>
    <textarea class="form-control"  id="description" name="description" >{{course.description}}</textarea>
  </div>
  <div class="form-group">
    <label for="Name">VideoID : </label>
    <input type="text" class="form-control" value = "{{course.videoid}}"id="videoid" name="videoid" placeholder="videoID">
  </div>
  <button type="submit" class="btn btn-primary">Sửa</button>
</form>
</div>

